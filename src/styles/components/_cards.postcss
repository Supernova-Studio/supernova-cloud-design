/* Card - Project details screen */
.card--screen {
    overflow: hidden;
    border-radius: var(--radius-small);
    box-shadow: var(--box-shadow-1);

    & .header__editor-link {
        font-size: 16px;
        font-weight: 500;
        color: var(--color-black);
        background-color: #fff;
    }
}
