/* Icons */
.icon {
    display: inline-block;
    width: 24px;
    height: 24px;
    background-repeat: no-repeat;
    background-position: 50%;
    background-size: contain;
}

/* Icons - sizes */
.icon--medium {
    width: 24px;
    height: 24px;
}

.icon--small {
    width: 14px;
    height: 14px;
}

/* Icon - variants */
