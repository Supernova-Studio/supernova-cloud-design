/* Page - Sign in */
.modal-sign-in-open {
    position: relative;

    &::before {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 0;
        content: '';
        width: 100vw;
        height: 100vh;
        background: url('../images/sing-in-screens-background.png');
        filter: blur(5px);
        opacity: .85;
    }

    & .header {
        display: none;
    }
}
